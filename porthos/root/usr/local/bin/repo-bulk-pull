. /etc/porthos/repos.conf

date_dir=d$(date +%Y%m%d)

trap 'kill $(jobs -p)' INT HUP TERM

for repo in ${!repos[@]}; do
    /usr/local/bin/repo-tier-pull $* ${repo} ${date_dir} &
done

wait
