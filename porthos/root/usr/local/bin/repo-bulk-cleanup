set -e
shopt -s nullglob extglob

. /etc/porthos/repos.conf
cd ${dest_dir}

# 2 weeks before last repo-bulk-pull:
stale_ts=$[ $(stat -c %Y head) - (86400*14) ]

declare -A targets

for D in d+([0-9]); do
    dir_ts=$(stat -c %Y $D)
    if (( ${dir_ts} <= ${stale_ts} )); then
        targets[$D]=1
    fi
done

if [[ -n ${!targets[@]} ]]; then
    echo "[NOTICE] removing stale tier(s) ${!targets[@]}"
    rm -rf ${!targets[@]}
fi


